<div class="container">
    <form class="row" action="/admin/updatepost/{{post.id}}" method="POST">
        <div class="col">
            <div class="form-group">
                <label for="title">Titulo</label>
                <input type="text" class="form-control" name="title" value="{{post.title}}" id="title">
            </div>
            <div class="form-group">
                <label for="description">Descrição</label>
                <input type="text" class="form-control" name="description" value="{{post.description}}" id="description">
            </div>
            <div class="form-group">
                <label for="url">url amigavel</label>
                <input type="text" class="form-control" name="url" value="{{post.url}}" id="url">
            </div>
            <div class="form-group">
                <label for="content">Conteúdo</label>
                <textarea type="text" class="form-control" name="content" id="content">{{post.content}}</textarea>
            </div>
            <div class="form-group">
                <label for="image">Imagem Principal</label>
                <input type="file" class="form-control-file" name="image" id="image">
            </div>
            <div class="form-group">
                <label for="thumb">Thumbnail</label>
                <input type="file" class="form-control-file" name="thumbnail" id="thumb">
            </div>
            <button type="submit" class="btn btn-primary">Salvar alterações</button>
        </div>
    </form>
</div>